@model SearchViewModel

@{
    ViewData["Title"] = " | Search Results";
}

<div class="row">
    <div class="col">
        <h1 class="mb-2">@Model.Header</h1>
    </div>
    <div class="col">
        <div class="float-right pr-2">
            <a asp-action="Index">New Search</a>
        </div>
    </div>
</div>

<table class="table">
    <tbody>
        @foreach (var instrument in Model.Instruments)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Instrument"
                       asp-area="" asp-route-id="@instrument.InstrumentId"
                       asp-route-slug="@instrument.Name.Slug()">@instrument.Name</a>
                </td>
                <td>@instrument.Department.Name</td>
                <td>
                    @foreach (InstrumentBrand ib in instrument.InstrumentBrands)
                    {
                        <div>@ib.Brand.FullProductName</div>
                    }
                </td>
                <td>
                    <div class="float-right">
                        <a asp-action="Edit" asp-route-id="@instrument.InstrumentId"
                           class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@instrument.InstrumentId"
                           class="btn btn-primary">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
